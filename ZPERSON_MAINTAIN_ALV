**          ev_dodid          = lv_intf_dodid
**          es_p0002          = ls_p0002
**          et_p0006          = lt_p0006
**          et_p0105          = lt_p0105
**          ev_does_not_exist = lv_does_not_exist
***         ev_email          =
***         ev_workphone      =
**        .

*-- New method call
      CALL METHOD lo_student_master->process_student_record
        EXPORTING
          iv_prdni          = lv_ssn     "?
          iv_dodid          = lv_dodid
*         iv_objid          =
          iv_lastname       = lv_last_name
*         iv_gbdat          =
