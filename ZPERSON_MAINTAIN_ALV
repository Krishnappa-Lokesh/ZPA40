        pr_data_changed->modify_cell(
          EXPORTING
            i_row_id    = ls_current_cell-row_id
            i_tabix     = ls_current_cell-tabix
            i_fieldname = 'NACHN'
            i_value     = gs_db_data-pa0002-nachn ).

        pr_data_changed->modify_cell(
          EXPORTING
            i_row_id    = ls_current_cell-row_id
            i_tabix     = ls_current_cell-tabix
            i_fieldname = 'VORNA'
            i_value     = gs_db_data-pa0002-vorna ).

