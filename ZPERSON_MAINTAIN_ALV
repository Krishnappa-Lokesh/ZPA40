*    ).

      SELECT *
        INTO TABLE @DATA(lt_pa0105_9000_usrid)
        FROM pa0105
        WHERE pernr = @lv_pernr
          AND subty = '9000' "CAC ID
          AND endda GE @sy-datum
          ORDER BY PRIMARY KEY .
