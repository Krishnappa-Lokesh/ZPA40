        EXPORTING
          i_row_id    = ls_current_cell-row_id
          i_fieldname = ls_current_cell-fieldname
        IMPORTING
          e_value     = lv_perid.
      SELECT SINGLE pernr INTO @lv_pernr
        FROM pa0105
        WHERE usrid = @lv_perid.

    ENDIF.
