*      col->set_short_text( 'SHORT TEXT' ).
*      col->set_medium_text( 'MEDIUM TEXT' ).
*      col->set_long_text( 'LONG TEXT' ).
*      col->set_tooltip( 'TOOLTIP TEXT' ).
*    catch cx_salv_not_found.                            "#EC NO_HANDLER
